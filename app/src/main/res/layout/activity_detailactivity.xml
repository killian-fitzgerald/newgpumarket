<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailactivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:id="@+id/picofitem"
        android:layout_height="250dp"></ImageView>

    <TextView
        android:id="@+id/nameoftime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/picofitem"
        android:text="Name"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:textSize="15dp"></TextView>

    <TextView
        android:id="@+id/rs"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/nameoftime"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/picofitem"
        android:text="€"
        android:textColor="#000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/priceofitems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nameoftime"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/rs"
        android:text="4000"
        android:textColor="#000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/descriptionofitem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rs"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/picofitem"
        android:lines="7"
        android:text="Description"
        android:textColor="#000"
        android:textSize="15dp" />

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_below="@id/picofitem"
      android:id="@+id/relative"
      android:layout_height="wrap_content">
      <View
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="#c0c0c0"
          android:id="@+id/view"
         >

      </View>
  </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Quantity"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/relative"
        android:id="@+id/quantity"
        android:layout_marginLeft="30dp"
        android:textColor="#000"/>
    <Spinner
        android:layout_width="90dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/relative"
        android:layout_marginTop="10dp"

        android:layout_toRightOf="@id/quantity"
        android:id="@+id/spinner"
        android:layout_height="wrap_content"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/view1"
        android:background="#c0c0c0"
        android:layout_marginTop="30dp"
        android:layout_below="@id/spinner">

    </View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:text="Price Detail"
        android:textSize="15dp"
        android:id="@+id/pricedetails"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:padding="10dp"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/view3"
        android:background="#c0c0c0"
        android:layout_below="@id/pricedetails">

    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pricedetails"
        android:text="Total Price"
        android:textSize="15dp"
        android:id="@+id/totalPrice"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:padding="10dp"></TextView>

    <TextView
        android:id="@+id/Rsss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pricedetails"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/totalPrice"
        android:padding="10dp"
        android:text="€"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"></TextView>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pricedetails"
        android:text="0"
        android:textSize="15dp"
        android:id="@+id/priceafterquantity"
        android:layout_toRightOf="@id/Rsss"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:inputType="number"
        android:textColor="#000"
        android:padding="10dp"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/view2"
        android:layout_marginTop="10dp"
        android:background="#c0c0c0"
        android:layout_below="@id/totalPrice"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Add to Cart"
        android:layout_marginTop="30dp"
        android:textColor="#f4f4f4"
        android:background="@drawable/btndesign"
        android:textSize="18dp"
        android:layout_below="@id/view2"
        android:id="@+id/addtocart"
        android:padding="20dp"
        android:layout_height="wrap_content"></Button><Button
    android:layout_width="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:text="Continue Shopping"
    android:textColor="#f4f4f4"
    android:background="@drawable/btndesign"
    android:layout_marginTop="5dp"
    android:id="@+id/continueshopping"
    android:textSize="18dp"
    android:layout_below="@id/addtocart"
    android:padding="20dp"
    android:layout_height="wrap_content"></Button>





</RelativeLayout>

</ScrollView>