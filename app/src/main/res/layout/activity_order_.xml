<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1.2">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
               android:padding="6dp"
                app:cardUseCompatPadding="false"
                android:layout_margin="2dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                  >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:orientation="vertical"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Google Windows Xl"
                                android:textSize="15dp"
                                android:textColor="#000"
                                android:id="@+id/ordername"
                                android:lines="3"
                    android:textAlignment="center"
                                android:layout_marginTop="10sp"></TextView>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="50pt"
                                android:layout_height="match_parent"
                                android:layout_marginTop="8dp"
                                android:gravity="end"
                                android:text="€"
                                android:textAlignment="textEnd"
                                android:textColor="#000"
                                android:textSize="15dp"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="40000"
                                android:textSize="15dp"
                                android:id="@+id/orderprice"
                                android:layout_marginLeft="4dp"
                                android:textColor="#000"
                                android:layout_marginTop="7dp"></TextView>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="60pt"
                                android:layout_height="match_parent"
                                android:text="Quantity :"

                                android:textSize="15dp"
                                android:textColor="#000"
                                android:lines="3"
                                android:gravity="end"
                                android:textAlignment="viewEnd"
                                android:layout_marginTop="7dp"></TextView>
                            <TextView
                                android:layout_width="50pt"
                                android:layout_height="match_parent"
                                android:text="5"
                                android:id="@+id/orderquantity"
                                android:inputType="number"
                                android:layout_marginLeft="9dp"
                                android:textSize="15dp"
                                android:textColor="#000"
                                android:layout_marginTop="7dp"></TextView>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/orderimage"></ImageView>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#c0c0c0"
                   android:layout_gravity="bottom"
                    android:id="@+id/view"/>



            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1.4">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="3"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:layout_weight=".8">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Price Details"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:textSize="20dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#c0c0c0"
                        android:layout_gravity="bottom"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_weight=".6">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price of "
                            android:textColor="#000"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:textSize="15dp"
                            />

                        <TextView
                            android:id="@+id/detailorderquantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="10dp"
                            android:text="2"
                            android:textColor="#000"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="100pt"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="end"
                            android:text="€."
                            android:textColor="#000"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="#000"
                            android:id="@+id/detailorderprice"
                            android:textSize="15dp"
                            android:text="4000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6">

                        <TextView
                            android:layout_width="50pt"
                            android:text="Delivery"
                            android:layout_marginLeft="10dp"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_width="80pt"
                            android:text="Free"
                            android:gravity="end"

                            android:layout_marginLeft="10dp"
                            android:textSize="15dp"
                            android:textColor="#38A525"
                            android:layout_height="match_parent"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#c0c0c0"
                        android:layout_gravity="bottom"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">


                        <TextView
                            android:layout_width="50pt"
                            android:text="Total Amount"
                            android:layout_marginLeft="10dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_marginTop="20sp"
                            android:textColor="#000"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="70pt"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20sp"
                            android:gravity="end"
                            android:text="€"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:text="4000"
                            android:layout_marginLeft="10dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:id="@+id/detailordertotalprice"
                            android:layout_marginTop="20sp"
                            android:textColor="#000"
                            android:layout_height="match_parent"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#c0c0c0"
                        android:layout_gravity="bottom"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:padding="6dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".3"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Shipping Details"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#c0c0c0"
                        android:layout_gravity="bottom"
                        />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:layout_weight=".7">
                       <EditText
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Cell no "
                           android:hint="Cell No"
                           android:layout_marginLeft="10dp"
                           android:textSize="15dp"
                           android:id="@+id/cellno"
                           android:textColor="#000"
                           android:padding="10dp"/>

                       <EditText
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Placeholder"
                           android:layout_marginLeft="10dp"
                           android:textSize="13dp"
                           android:hint="Address"
                           android:lines="3"
                           android:textColor="#000"
                           android:padding="5dp"
                           android:id="@+id/adrressorder"/>



                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cash On Delivery "
                android:layout_marginLeft="10sp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_gravity="bottom"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight=".9">
            <Button
                android:layout_width="match_parent"
                android:textColor="#9B9595"
               android:layout_margin="30dp"
                android:padding="10dp"
                android:id="@+id/placeyourorder"
                android:layout_height="wrap_content"
                android:background="@drawable/btn"
                android:text="Place your Order"/>




        </LinearLayout>





    </LinearLayout>



</RelativeLayout>