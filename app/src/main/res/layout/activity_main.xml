<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#1C1C3C"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/txt"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/slpsh_image" />

    <EditText
        android:id="@+id/id1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:backgroundTint="#f4f4f4"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:text=""

        android:textColor="#f4f4f4"
        android:textColorHint="#EEE8E8" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:padding="15dp"
        android:textColorHint="#EEE8E8"
        android:backgroundTint="#f4f4f4"
        android:hint="Password"
        android:textColor="#f4f4f4"
        android:inputType="textPassword"
        android:id="@+id/ed2"
        android:layout_below="@+id/id1"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_below="@id/ed2"
        android:layout_marginLeft="25dp"
        android:id="@+id/forget"
        android:text="Forgot Password ?"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="Sign In"
        android:textColor="#F3EEEE"
        android:id="@+id/b1"
        android:textSize="20dp"
       android:background="@drawable/btndesign"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btndesign"
        android:text="Admin Login"
        android:textColor="#F3EEEE"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/b2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:text="Don't have an Account? Click Here !"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp" />


    <View
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/b2"
        android:background="#c0c0c0"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:gravity="center"
        android:layout_below="@id/b2"
        android:textColor="#F0E9E9"
        android:layout_marginTop="30dp"
        android:id="@+id/or"
        android:text="OR"/>
    <View
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="5dp"
        android:layout_alignRight="@id/or"
        android:layout_below="@id/b2"
        android:background="#c0c0c0"/>

       <TextView
           android:layout_width="match_parent"
           android:textSize="20dp"
           android:layout_height="wrap_content"
           android:layout_below="@id/or"
           android:id="@+id/admin"
           android:textAlignment="center"
           android:layout_marginTop="20dp"
           android:textColor="#F3EEEE"
           android:text="Admin LogIn ?"/>

       <TextView
           android:layout_width="match_parent"
           android:textSize="20dp"
           android:layout_height="wrap_content"
           android:layout_below="@id/or"
           android:id="@+id/notadmin"
           android:textAlignment="center"
           android:layout_marginTop="20dp"
           android:textColor="#F3EEEE"
           android:text="Not Admin?"/>


</RelativeLayout>